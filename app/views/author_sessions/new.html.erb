<h1>Login</h1>

<%= form_tag author_sessions_path, method: :post, role: :form do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, '', class: 'form-control' %>
    <br/>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, '', class: 'form-control' %>
    <br/>
  </div>
  <div class="actions">
    <%= submit_tag "Login", class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Back', articles_path, class: 'btn btn-default btn-sm' %>
  </div>
<% end %>

